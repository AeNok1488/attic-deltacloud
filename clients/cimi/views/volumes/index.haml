- @title=@volumes.description

- content_for :breadcrumb do
  %ul.breadcrumb
    %li
      %a{ :href => "/cimi/cloudEntryPoint"} CloudEntryPoint
      %span.divider="/"
    %li.active
      VolumeCollection

- content_for :actions do
  %p
    %a{ :href => "#{@volumes.uri}?format=xml", :class => 'label warning' } XML
    %a{ :href => "#{@volumes.uri}?format=json", :class => 'label warning' } JSON

%blockquote
  %p
    A Volume Collection entity represents the collection of Volume
    entities within a Provider. This entity can be used to locate and create
    volumes.

%ul
  - @volumes.volumes.each do |volume|
    %li
      %a{ :href => "/cimi/volumes/#{volume.href.split('/').last}"}=volume.href.split('/').last

%h3 Collection details

%dl
  %dt URI
  %dd=@volumes.uri
  %dt Description
  %dd=@volumes.description
  %dt Created
  %dd=@volumes.created
